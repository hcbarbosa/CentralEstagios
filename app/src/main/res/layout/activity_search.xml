<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.fatecriopreto.centralestagios.Search">

    <!-- AppBar-->
    <include android:id="@+id/toolbar" layout="@layout/app_bar"></include>


    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edtarredondado"
        android:queryHint="Digite o nome de uma vaga"
        android:backgroundTint="@color/colorGray" />
</RelativeLayout>
