<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="@color/colorIntermediario" />
            <gradient android:angle="-90" android:startColor="@color/colorLogo" android:endColor="@color/colorIntermediario"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="@color/colorLogo" />
            <solid android:color="@color/colorIntermediario"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="@color/colorLogo" />
            <gradient android:angle="-90" android:startColor="@color/colorIntermediario" android:endColor="@color/colorIntermediario" />
        </shape>
    </item>
</selector>