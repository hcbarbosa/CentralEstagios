<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.fatecriopreto.centralestagios" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.AppTheme" >
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PerfilActivity"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name=".Activities.MensagemActivity"
            android:label="@string/title_activity_mensagem" >
        </activity>
        <activity
            android:name=".Activities.VagaActivity"
            android:label="@string/title_activity_vaga" >
        </activity>
        <activity
            android:name=".Activities.ConfiguracoesActivity"
            android:label="@string/title_activity_configuracoes" >
        </activity>
        <activity
            android:name=".Activities.CurriculoActivity"
            android:label="@string/title_activity_curriculo" >
        </activity>
        <activity
            android:name=".Activities.VagaPesquisaAvancadaActivity"
            android:label="@string/title_activity_vaga_pesquisa_avancada" >
        </activity>
        <activity
            android:name=".Activities.VagaRecomendadaActivity"
            android:label="@string/title_activity_vaga_recomendada" >
        </activity>
    </application>

</manifest>
